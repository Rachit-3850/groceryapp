<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".edit_seller_profile_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Seller"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:layout_centerVertical="true"
                    android:id="@+id/back_edit_seller"
                    android:paddingLeft="15dp"/>

            </RelativeLayout>



            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/editPhoto_seller"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:src="@drawable/ic_baseline_store_24"
                app:c_background_color="@color/grey2"
                android:layout_gravity="center"


                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:c_shadow_gravity="end"
                app:c_shadow_radius="5.5" />

            <EditText
                android:id="@+id/Name_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:hint="Name"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/rectangle_box"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                />
            <EditText
                android:id="@+id/ShopName_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:hint="Shop Name"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/rectangle_box"
                android:inputType="textPersonName"

                android:textColorHint="@color/black"
                />

            <EditText
                android:id="@+id/pno_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_box"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:hint="Phone"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:inputType="phone"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black" />
            <EditText
                android:id="@+id/fee_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_box"
                android:drawableStart="@drawable/ic_baseline_diamond_24"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:hint="Delivery Fee"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/Country_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:hint="Country"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_box"
                android:inputType="textPersonName"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black"
                />
            <EditText
                android:id="@+id/state_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:hint="State"
                android:background="@drawable/rectangle_box"
                android:inputType="textPersonName"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black"
                />
            <EditText
                android:id="@+id/city_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:hint="City"
                android:background="@drawable/rectangle_box"
                android:inputType="textPersonName"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                />

            <EditText
                android:id="@+id/address_edit_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:hint="Shop Address"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/rectangle_box"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/seller_switch_shop"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:hint="Shop Open"
                android:textSize="18dp"
                android:background="@drawable/rectangle_box"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_btn_seller"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:text="Update"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>