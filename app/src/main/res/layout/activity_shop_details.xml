<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".shopDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/icon_shop_details_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".6"
            android:background="@drawable/villageshopp">

        </ImageView>

        <RelativeLayout
            android:id="@+id/toolbar_shop_details_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Shop Details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/back_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <ImageView
                android:id="@+id/star_shop_details_user"
                android:layout_width="wrap_content"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cart_shop_details_user"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:id="@+id/cart_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/cart_shop_details_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/oval_design"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/seller_main_headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_shop_details_user"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/shopName_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="shop name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNo_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Phone No"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/email_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/address_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="address"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->


<!--                <TextView-->
<!--                    android:id="@+id/edit_product_discountP"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:layout_margin="2dp"-->
<!--                    android:text="discountP"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textColor="@color/grey2"-->
<!--                    android:textSize="15dp" />-->

<!--                <TextView-->
<!--                    android:id="@+id/edit_product_price"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:layout_margin="2dp"-->
<!--                    android:text="price"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textColor="@color/grey2"-->
<!--                    android:textSize="15dp" />-->


<!--            </LinearLayout>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/toolbar_shop_details_user">

            <TextView
                android:id="@+id/shopOpen_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="open"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/deleiveryfee_shop_details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="delivery fee"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />





        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:id="@+id/call_shop"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_baseline_phone_24_black" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_shop_details_user"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Search"
                android:textColorHint="@color/grey2"
                android:background="@drawable/rectangle_box"
                android:textColor="@color/grey2"
                android:id="@+id/search_shop_details_user"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:id="@+id/filter_shop_details_user"
                android:src="@drawable/ic_baseline_filter_24" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:id="@+id/text_shop_details_user"
            android:textColor="@color/black"
            android:text="showing all"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:id="@+id/recycleView_shop_details_user" />



</LinearLayout>